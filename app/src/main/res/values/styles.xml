<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Toolbar" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="Toolbar.Text" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">26sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonAdd.Text" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TabLayout.Text" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonAdd.Text.login_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>
</resources>
