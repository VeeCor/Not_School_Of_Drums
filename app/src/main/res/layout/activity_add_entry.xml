<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/New_Entry"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        style="@style/Toolbar"
        android:id="@+id/new_entry_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/title_new_entry"
        app:titleTextAppearance="@style/Toolbar.Text"
        app:navigationIcon="@drawable/baseline_arrow_back_24"/>

    <FrameLayout
        android:id="@+id/frame_for_fragments_add_entry"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/new_entry_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/fragment_add__entry_step1"/><include layout="@layout/fragment_add__entry_step1"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>