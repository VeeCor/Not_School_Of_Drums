<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".Fragments.Account">

    <LinearLayout
        android:id="@+id/account_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="15dp">

        <TextView
            android:id="@+id/correct_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/correct"
            android:textColor="@color/account_text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_gravity="end"
            android:paddingTop="10dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:foreground="@drawable/account_stroke"
            android:layout_gravity="center"
            app:cardElevation="2dp"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/photo_profile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="@string/image"
                android:src="@drawable/no_photo"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_student"
            android:textColor="@color/account_text"
            android:textSize="14sp"
            android:fontFamily="@font/roboto_medium"
            android:layout_gravity="center"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/fio_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/teacher_simple"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/profession_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profession"
            android:textColor="@color/account_text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="12dp"
            android:visibility="visible"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/profession_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/account_card_background"
            app:cardBackgroundColor="@color/Background"
            app:cardElevation="3dp"
            app:cardCornerRadius="5dp"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp">

                <TextView
                    android:id="@+id/database_text_profession"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="start"/>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/study_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/graduate"
            android:textColor="@color/account_text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="12dp"
            android:visibility="visible"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/study_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/account_card_background"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/Background"
            app:cardCornerRadius="5dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/database_text_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="end"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/account_card_stroke"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="center"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lesson"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/database_text_lesson"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="end"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/account_card_stroke"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="center"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/database_text_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="end"/>

                </FrameLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/private_info"
            android:textColor="@color/account_text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="12dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/account_card_background"
            app:cardBackgroundColor="@color/Background"
            app:cardElevation="3dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/birth_date"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/database_text_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="end"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/account_card_stroke"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="center"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gender"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/database_text_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="end"/>

                </FrameLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contacts"
            android:textColor="@color/account_text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="12dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/account_card_background"
            app:cardBackgroundColor="@color/Background"
            app:cardElevation="3dp"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/database_text_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="end"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/account_card_stroke"
                    android:layout_marginVertical="10dp"
                    android:layout_gravity="center"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="start"/>

                    <TextView
                        android:id="@+id/database_text_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto"
                        android:layout_gravity="end"/>

                </FrameLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_me"
            android:textColor="@color/account_text"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="12dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:foreground="@drawable/account_card_background"
            app:cardBackgroundColor="@color/Background"
            app:cardElevation="3dp"
            app:cardCornerRadius="5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp">

                <TextView
                    android:id="@+id/database_text_about_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="start"/>

            </FrameLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>